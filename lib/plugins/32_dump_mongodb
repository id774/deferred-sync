#!/bin/sh

get_mongodbdump() {
    test -f $MONGODBDUMP && \
      rm $MONGODBDUMP
    $MONGODUMP_BIN --out $MONGODBDUMP_PATH \
      && zip -r $MONGODBDUMP $MONGODBDUMP_PATH/ \
      && rm -rf $MONGODBDUMP_PATH/
    echo "Return code is $?"
}

dump_mongodb() {
    echo -n "* Executing mongodbdump on "
    date "+%Y/%m/%d %T"
    get_mongodbdump
}

echo "- [info] dump_mongodb has been loaded"
dump_mongodb
